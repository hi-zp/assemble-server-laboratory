{
  "name": "assemble-server-laboratory",
  "version": "0.0.1",
  "description": "",
  "author": "luckcoding@gmail.com",
  "private": true,
  "license": "LICENSE",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=dev npx @nestjs/cli start assemble -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/assemble/main",
    "lint": "eslint \"global.d.ts\" \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/assemble/test/jest-e2e.json",
    "migrate:create:dev": "NODE_ENV=dev npx ts-node libs/common/src/database/create-schema.ts"
  },
  "dependencies": {
    "@fastify/csrf-protection": "^6.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.11.2",
    "@fastify/view": "^8.2.0",
    "@mikro-orm/better-sqlite": "^6.0.0-rc.1",
    "@mikro-orm/core": "^6.0.0-rc.1",
    "@mikro-orm/nestjs": "^5.2.2",
    "@mikro-orm/postgresql": "^6.0.0-rc.1",
    "@mikro-orm/reflection": "^6.0.0-rc.1",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "10.2.7",
    "@nestjs/platform-fastify": "^10.2.7",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.14",
    "@supercharge/request-ip": "^1.2.0",
    "argon2": "^0.31.1",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv-expand": "^10.0.0",
    "helper-fns": "^2.6.38",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "nestjs-i18n": "^10.3.7",
    "nestjs-pino": "^3.5.0",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.0.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.32.6",
    "swagger-stats": "^0.99.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@assemble/constant(|/.*)$": "<rootDir>/libs/constant/src/$1",
      "^@assemble/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@assemble/entities(|/.*)$": "<rootDir>/libs/entities/src/$1",
      "^@assemble/modules(|/.*)$": "<rootDir>/libs/modules/src/$1"
    }
  },
  "main": "index.js",
  "repository": "git@github.com:hi-zp/assemble-server-laboratory.git",
  "packageManager": "yarn@4.0.2"
}
